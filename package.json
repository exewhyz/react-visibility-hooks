{
  "name": "react-visibility-hooks",
  "version": "1.0.6",
  "description": "Tiny, SSR-safe React hooks for page visibility, idle detection and smart polling",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "test": "jest",
    "prepare": "npm run build"
  },
  "keywords": [
    "react",
    "react-hooks",
    "visibility",
    "page-visibility",
    "idle-detection",
    "performance",
    "react-performance",
    "smart-polling",
    "analytics",
    "react-utils"
  ],
  "author": "Aniket Raj",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/exewhyz/react-visibility-hooks.git"
  },
  "homepage": "https://github.com/exewhyz/react-visibility-hooks#readme",
  "bugs": {
    "url": "https://github.com/exewhyz/react-visibility-hooks/issues"
  },
  "peerDependencies": {
    "react": ">=18"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.2",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.2.13",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^28.0.0",
    "ts-jest": "^29.4.6",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}
